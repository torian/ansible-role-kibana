#!/bin/sh
###############################################################################

### BEGIN INIT INFO
# Provides:          kibana
# Required-Start:    $network $remote_fs $named
# Required-Stop:     $network $remote_fs $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Kibana
# Description:       Kibana daemon
### END INIT INFO

###############################################################################

KIBANA_DAEMON=kibana
KIBANA_USER={{kibana_owner}}
KIBANA_BIN={{kibana_current_dir}}/bin
PIDFILE=/var/run/${KIBANA_DAEMON}.pid
DESC="Kibana"

PATH=/bin:/usr/bin:/sbin:/usr/sbin:${KIBANA_BIN}

###############################################################################

kibana_start () {

    # Check pid
    if [ -n "$(pidofproc -p ${PIDFILE} ${KIBANA_DAEMON})" ] ; then
      log_begin_msg "Already running."
      log_end_msg 0
      exit 0
    fi

    # Start Daemon
    start-stop-daemon \
      --start \
      --oknodo \
      --user  ${KIBANA_USER} \
      --chuid ${KIBANA_USER} \
      --name  ${KIBANA_DAEMON} \
      --pidfile "${PIDFILE}" \
      --make-pidfile \
      --exec ${KIBANA_BIN}/${KIBANA_DAEMON}

    log_end_msg $?
}

kibana_stop() {

  PID=''
	if [ -f "${PIDFILE}" ]; then
    PID=$(cat ${PIDFILE})
  else
    PID=$(pgrep -f ${KIBANA_DAEMON})
  fi

  start-stop-daemon \
    --stop \
    --oknodo \
    --user  ${KIBANA_USER} \
    --name  ${KIBANA_DAEMON} \
    --pidfile "${PIDFILE}" \
    --retry 5

  r=${?}

  if [ ${r} -eq 2 ]; then
    log_failure_msg "Failed to stop ${DESC} (pid ${PID} still present)"
    log_end_msg 1
  fi

  log_end_msg 0

}

###############################################################################


if [ "$(id -u)" -ne 0 ]; then
	echo "You need root privileges"
	exit 1
fi

[ -f /etc/default/rcS ] && . /etc/default/rcS

. /lib/lsb/init-functions

ACTION=${1} ; shift

case "${ACTION}" in

  start) 
    log_daemon_msg "Starting ${DESC}" "${KIBANA_DAEMON}"
    kibana_start
    ;;

  stop)
    log_daemon_msg "Stopping ${DESC}" "${KIBANA_DAEMON}"
    kibana_stop
    ;;

  status)
    :
    ;;
  restart)
    $0 stop
    sleep 5
    $0 start
	  ;;
  *)
	  echo "Usage: $0 [start|stop|restart]"
	  exit 0
	;;
esac

exit 0
